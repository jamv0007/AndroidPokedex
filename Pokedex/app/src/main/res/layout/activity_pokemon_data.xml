<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonData"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pokeImageData"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"></ImageView>

    <TextView
        android:id="@+id/pokeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NombrePokemon"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/pokeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TipoPokemon"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/pokeAbility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HabilidadPokemon"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/pokeHiddenAbility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HabilidadOcultaPokemon"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/statText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estadisticas"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black">
    </TextView>

    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:id="@+id/stats"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    </com.jjoe64.graphview.GraphView>
</LinearLayout>